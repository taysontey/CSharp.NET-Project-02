@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

@section javascript{
    <script type="text/javascript">
        $(document).ready(
            function () {

                $("#btncadastro_fornecedor").click(
                    function () {

                        var Model = {
                            Nome: $("#nome_fornecedor").val()
                        };

                        $.ajax(
                            {
                                type: "POST",
                                url: "/Fornecedor/Cadastrar",
                                data: Model,
                                success: function (msg) {
                                    $("#mensagem_fornecedor").html(msg);
                                },
                                error: function (e) {
                                    $("#mensagem_fornecedor").html(e.status);
                                }
                            })
                    });
            });
    </script>
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Cadastro de Fornecedores
                </div>
                <div class="panel-body">
                    <label>Nome:</label>
                    <input type="text" id="nome_fornecedor" class="form-control" />
                    <br />
                </div>
                <div class="panel-footer">
                    <button id="btncadastro_fornecedor" style="width:300px" class=" btn btn-success">
                        Cadastrar Fornecedor
                    </button>
                    <hr />
                    <span id="mensagem_fornecedor"></span>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

